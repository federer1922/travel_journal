<!DOCTYPE html>
<html>
  <head>
    <title>Travel journal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="<%= root_path %>">Travel journal</a>
    <% if current_user.nil? %>
      <a class="navbar-brand" href="<%=  %>"><%= link_to "sign in", new_user_session_path, method: "get", class: "text-white" %>&nbsp;</a>
    <% else %>
      <a class="navbar-brand" href="<%=  %>"><%= link_to "sign out", destroy_user_session_path, method: :delete, class: "text-white" %>&nbsp;</a>
      <a class="navbar-brand" href="<%=  %>"><%= link_to "change password", edit_user_registration_path, method: "get", class: "text-white" %>&nbsp;</a>    
    <% end %> 
  </nav>

  <div class="container">
    <div class="row">
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div class="text-dark"><%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div> 
        </div>
      <% elsif notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div class="text-dark"><%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div> 
        </div>
      <% end %>   
    </div>
  </div>

    <%= yield %>
  </body>
</html>
