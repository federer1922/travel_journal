<div class="container">
  <h5 style="font-weight: bold">Edit note</h5>
  <div class="row">
    <div class="col">
      <b>Date:</b> <%= @note.created_at.to_date %><br>
      <b>City:</b> <%= @note.city %><br>
      <b>Temperature:</b> <%= @note.temperature %> Â°C<br>
      <b>Wind:</b> <%= @note.wind %> m/s<br>
      <b>Cloudiness:</b> <%= @note.clouds %>
    </div>
  </div>   


  <div class="row">
    <div class="col-4">
      <form action="/update" method="post">
        <input type="hidden" value="patch" name="_method">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token() %>"/>
        <div class="form-group">
          <label for="note[description]" <p class="font-weight-bold"></p>Description</label>
          <input type="hidden" name="note_id" value="<%= @note.id %>">
          <textarea rows="3" input type="text" class="form-control" name="note[description]"><%= @note.description %></textarea>
          <p></p>
          <button type="submit" style="float: right;" class="btn btn-primary">Submit</button>
        </div>   
      </form>
    </div>   
  </div>
</div>